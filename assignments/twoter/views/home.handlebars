<div id='userLoggedIn' username='{{username}}'>
User logged in: {{username}}
</div>


<br></br>
<form id ='new' action='newTwote' method='POST'>
    Create a new Twote!
    <input type='text' name='twotetext'> 
    <input type='submit' value='Submit'>
</form>

<br></br>

<div id='allTwotes'>
    {{#each alltwotes}}
        <div id='{{this.id}}-twote'>
            <li>User {{this.user}} said {{this.text}}</li>
            <div id = '{{this.user}}-twote-delete' username ='{{this.user}}'>
                <input type='submit' value='Delete'>
            </div>
        </div>
    {{/each}}
</div>

