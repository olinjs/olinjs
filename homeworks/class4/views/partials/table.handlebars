<table class="table table-striped">
	<tr class="row">
		<td class='col-xs-1'><strong>Quantity</strong></td>
		<td class='col-xs-1'><strong>Price</strong></td>
		<td class='col-xs-8 text-left'><strong>Name</strong></td>
	</tr>
</table>
<table class="table table-striped table-hover">
	{{#each ingredient}}
	<tr class="row">
		<td class='col-xs-1'><button class="btn btn-alert" type="button" data-toggle="collapse" data-target="#edit{{name}}"><span class="glyphicon glyphicon-pencil"></span></button></td>
		<td class='col-xs-1'>{{quantity}}</td>
		<td class='col-xs-1'>{{price}}</td>
		<td class='col-xs-7 text-left'>{{name}}</td>
		<td class='col-xs-1'>
			<button class="btn btn-alert">Mark Out of Stock</button>
		</td>
		<td class='col-xs-1'>
			<button class="btn btn-danger">Delete</button>
		</td>
	</tr>
	<tr class="collapse" id="edit{{name}}">
		<td class='col-xs-1 offset-1'>{{quantity}}</td>
		<td class='col-xs-1'>{{price}}</td>
		<td class='col-xs-7 text-left'>{{name}}</td>
	</tr>
	{{/each}}
</table>

