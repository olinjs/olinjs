    <p>Price: <span>${{this.price}}</span></p>
    <form id={{this._id}}>
      <input type="submit" value="In Stock" class='in-stock-ingredient'}>
      <input type="submit" value="Edit" class="edit-button">
    </form>
  </li>
{{/each}}
</ul>
