<h4>Out of Stock:</h4>

<ul id="out-of-stock-list">
  <li id="hidden-template-li-out" style="display:none">
    <p>Ingredient: <span class="ingredient">Meat</span></p>
    <p>Price: <span class="price">$100</span></p>
    <form id={{this._id}} class="in-stock-ingredient">
      <input type="submit" value="In Stock">
      <input type="submit" value="Edit" id="edit-button">
    </form>
  </li>
</ul>

<ul>
{{#each outOfStock}}
  <li>
