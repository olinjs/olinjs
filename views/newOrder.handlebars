<div class="container-fluid">
	<div class="page-header">
			<h1>Make Your Order <small>It'll be great!</small></h1>
	</div>
	<form>
    	<ul class="list-group", style = "padding-bottom: 18px">
	  		{{#each ingredients}}
				<h1 style="text-indent: 10px"> <small> {{this.name}} </small> </h1>
				<ul>
				    <li class="list-group-item"> 
                        Name: {{this.name}} Price: {{this.price}}
					    <div class = "checkbox">
                            <label>
                                {{#if this.available}}
							        <input type="checkbox"> Add
                                {{else}}
                                    <input type="checkbox" disabled> Add
                                {{/if}}
						    </label>
					    </div>
				    </li>
				</ul>
            {{/each}}
            <button type="submit" class="btn btn-default">Submit</button>
		</ul>
    </form>
</div>
