<div class="container-fluid">
	<div class="page-header">
		<h1>Your Ingredients <small>aren't they tasty?</small></h1>
	</div>
	<ul class="list-group", style = "padding-bottom: 18px">
        {{#each ingredients}}
            <li class="ingredient-group" id ={{this.id}}>
                <h1 style="text-indent: 10px"> <small> {{this.name}} </small> </h1>
                <ul>
                    <li class="list-group-item">
                        <form class="form-inline ingredient-form">
                            <div class="form-group">
                                <label class="Name-label"> Name </label>
                                <input type="text" class="form-control" name=name value={{this.name}}>
                            </div>
                            <div class="form-group">
                                <label> Price </label>
                                <input type="text" class="form-control" name=price value={{this.price}}>
                            </div>
                            <div class="checkbox">
                                <label>
                                    {{#if this.available}}
                                        <input type="checkbox" checked name=available> Available
                                    {{else}}
                                        <input type="checkbox" name=available> Available
                                    {{/if}}
                                </label>
                            </div>
                            <button type="submit" class="btn btn-default">Edit</button>
                        </form> 
                    </li>
                </ul>
            </li>
         {{/each}}
     </ul>

    <div class="new-ingredient-group">
        <h1 style="text-indent: 10px"> <small> New Ingredient!  </small> </h1>
        <ul>
            <li class="list-group-item">
                <form class="form-inline new-ingredient-form">
                    <div class="form-group">
                        <label> Name </label>
                        <input type="text" class="form-control floating-label" name=name placeholder="Buns">
                    </div>
                    <div class="form-group">
                        <label> Price </label>
                        <input type="text" class="form-control floating-label" name=price placeholder=".50">
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" checked name=available> Available
                        </label>
                    </div>
                    <button type="submit" class="btn btn-default">Add</button>
                </form> 
            </li>
        </ul>
    </div>
</div>
