<div class="container-fluid">
    <div class="page-header">
        <h1>Your Orders <small>Lets make some burgers</small></h1>
    </div>
    <form class="form-horizontal">
        <fieldset>
            <ul class="list-group", style = "padding-bottom: 18px">
                {{#each orders}}
                    <ul class='list-inline' order_id={{this.id}}>
                        <li> {{this.ingredients}} </li>
                        <li>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" class = "done-box"> Done
                                </label>
                            </div>
                        </li>
                    </ul>
                {{/each}}
            </ul>
        </fieldset>    
    </form>
</div>
